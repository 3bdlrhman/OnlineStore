@model IEnumerable<OnlineStore.Models.Order>

@{
    ViewBag.Title = "OrdersIndex";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h3 class="header-section">Orders Table</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>

<ul class="pagination">
    <li>
        <a href="/orders/index?page=@ViewBag.previousPage">Previous</a>
    </li>
    <li>
        <a href="/orders/index?page=@ViewBag.nextPage">Next</a>
    </li>
</ul>