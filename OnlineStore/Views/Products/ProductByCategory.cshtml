                                    <label for="op008">Home Theater, TV & Video</label>

                                </li>
                                <li>
                                    <input type="checkbox" id="op007" onclick='window.location.assign("/products/productByCategory?category=Mobiles")'>
                                    <label for="op007">Mobiles & Accessories</label>

                                </li>
                                <li>
                                    <input type="checkbox" id="op006" onclick='window.location.assign("/products/productByCategory?category=Media")'>
                                    <label for="op006">Portable Media Players</label>

