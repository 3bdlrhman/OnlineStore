                                <li>
                                    <input type="checkbox" id="op003" onclick='window.location.assign("/products/productByCategory?category=WearableTechnology")'>
                                    <label for="op003">Wearable Technology</label>

                                </li>
                            </ul>
                        </div>
                        <!-- //electronics -->
                        <!-- delivery -->
                        <div class="left-side border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Cash On Delivery</h3>
                            <ul>
                                <li>
                                    <input type="checkbox" id="op002" onclick='window.location.assign("/products/productByFilter?filter=FreeDelivery")'>
                                    <label for="op002">Free Delivery</label>
                                </li>
                            </ul>
                        </div>
                        <!-- //delivery -->
                        <!-- arrivals -->
                        <div class="left-side border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">New Arrivals</h3>
                            <ul>
                                <li>
                                    <input type="checkbox" id="op001" onclick='window.location.assign("/products/productByFilter?filter=new")'>
                                    @*<span class="span">New Items</span>*@
                                    <label for="op001">New Items</label>
                                </li>
                            </ul>
                        </div>
                        <!-- //arrivals -->

                    </div>
                    <!-- //product right -->
                </div>

            </div>
        }
        @if (Model.Count == 0)
        {
            <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
                <span>There is no items! Try Other Filters</span>
            </h3>
        }
    </div>
</div>
<!-- //top products -->

<script src="~/Scripts/js/jquery-2.2.3.min.js"></script>
<script type="text/javascript">
    var checkboxValues = JSON.parse(localStorage.getItem('checkboxValues')) || {};
    var $checkboxes = $(":checkbox");

    $checkboxes.on("change", function () {
        $checkboxes.each(function () {
            checkboxValues[this.id] = this.checked;
        });
        localStorage.setItem("checkboxValues", JSON.stringify(checkboxValues));
    });

    $.each(checkboxValues, function (key, value) {
        $("#" + key).prop('checked', value);
    });
</script>