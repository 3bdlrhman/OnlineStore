@model ICollection<OnlineStore.Models.Product>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "List of Products";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<!-- banner-2 -->
<div class="page-head_agile_info_w3l">

</div>
<!-- //banner-2 -->
<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="/">Home</a>
                    <i>|</i>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- //page -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        @if (Model.Count != 0)
        {
            <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
                <span>Our Products</span>
            </h3>
            <!-- //title heading -->
            <div class="row">
                <!-- product left -->
                <div class="agileinfo-ads-display col-lg-9">
                    <div class="wrapper">

                        @{ for (var i = 0; i < 3; i++)
                            {
                                var count = 0;
                                <!-- first section -->
                                <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                                    <div class="row">
                                        @foreach (var item in Model.Skip(i * 3).Take(3))
                                        {
                                            <div class="col-md-4 product-men">
                                                <div class="men-pro-item simpleCart_shelfItem">
                                                    <div class="men-thumb-item text-center">
                                                        <img src="~/images/@item.img" alt="@item.Name">
                                                        <div class="men-cart-pro">

                                                            <div class="inner-men-cart-pro">
                                                                <a href="/products/details/@item.Id" class="link-product-add-cart">Quick Show</a>
                                                            </div>
                                                        </div>
                                                        @if (item.IsNewArrival)
                                                        {
                                                            <span class="product-new-top">New</span>
                                                        }
                                                    </div>
                                                    <div class="item-info-product text-center border-top mt-4">
                                                        <h4 class="pt-1">
                                                            <a href="/products/details/@item.Id">@item.Name</a>
                                                        </h4>
                                                        <div class="info-product-price my-2">
                                                            <span class="item_price">@(item.Price- item.Price*item.Discount)</span>
                                                            <del>@item.Price</del>
                                                        </div>
                                                        <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                                <a href="#" data-name="@item.Name" data-toggle="modal" data-target="#cart" data-id="@item.Id" data-price="@(item.Price- item.Price*item.Discount)" class="add-to-cart btn btn-primary">Add to cart</a>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <!-- //first section -->
                                count = count + 3;
                            }
                        }
                    </div>
                </div>
                <!-- //product left -->
                <!-- product right -->

                <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
                    <div class="side-bar p-sm-4 p-3">
                        <div class="search-hotel border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Search Here..</h3>
                            <form action="/products/searchProducts" method="post">
                                <input type="search" placeholder="Product name..." name="searchString" required="">
                                <input type="submit" value=" ">
                            </form>
                        </div>

                        <!-- price -->
                        <div class="range border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Price</h3>
                            <div class="w3l-range">
                                <ul>
                                    <li>
                                        <a href="/products/ProductByFilter?filter=Price&value=1000">Under $1,000</a>
                                    </li>
                                    <li class="my-1">
                                        <a href="/products/ProductByFilter?filter=Price&value=5000">$1,000 - $5,000</a>
                                    </li>
                                    <li>
                                        <a href="/products/ProductByFilter?filter=Price&value=10000">$5,000 - $10,000</a>
                                    </li>
                                    <li class="my-1">
                                        <a href="/products/ProductByFilter?filter=Price&value=20000">$10,000 - $20,000</a>
                                    </li>
                                    <li>
                                        <a href="/products/ProductByFilter?filter=Price&value=30000">$20,000 - $30,000</a>
                                    </li>
                                    <li class="mt-1">
                                        <a href="/products/ProductByFilter?filter=Price&value=35000">Over $30,000</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- //price -->
                        <!-- reviews -->
